<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDEDED"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_student_name"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginBottom="4dp"
                android:text="Phạm Nhật Nam"
                android:textColor="@color/black"

                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/item_student_code"
                app:layout_constraintEnd_toEndOf="@+id/item_student_code"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_student_code" />

            <TextView
                android:id="@+id/item_student_code"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:text="171200791"

                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_student_email"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:text="CNTT1-k58"
                app:layout_constraintEnd_toEndOf="@+id/item_student_code"
                app:layout_constraintStart_toStartOf="@+id/item_student_code"
                app:layout_constraintTop_toBottomOf="@+id/item_student_code" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_subject"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

